  "scripts": {
    "test": "concurrently \"jest\" \"cd client && npm test -- --watchAll=false\"",
    "test:backend": "jest",
    "test:frontend": "cd client && npm test -- --watchAll=false",
    "test:watch": "concurrently \"jest --watch\" \"cd client && npm test\"",
    "start": "node server.js",
    "server": "nodemon server.js",
    "install-all": "npm install && cd client && npm install && cd ..",
    "dev": "concurrently \"nodemon server.js\" \"cd client && npm start\"",
    "build": "cd client && npm run build && cd ..",
    "prod": "npm run build && NODE_ENV=production node server.js"
  },
